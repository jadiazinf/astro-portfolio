---
import { Button } from "$lib/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "$lib/components/ui/card";
import { Textarea } from "$lib/components/ui/textarea";
import { MailIcon, MapPinIcon, PhoneIcon } from "$icons/index";
import { Input } from "$lib/components/ui/input";
import { useTranslations } from "$/i18n/utils";
import { EAppLanguages } from "$/i18n/types";
import LinkedinButton from "../shared/ui/linkedin/LinkedinButton.svelte";
import GithubButton from "$components/shared/ui/github/GithubButton.svelte";

const currentLanguage = (Astro.currentLocale ?? EAppLanguages.ENGLISH) as EAppLanguages;

const translate = useTranslations(currentLanguage);
---

<section id="contact" class="py-20 px-6">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-12 text-center text-balance">{ translate("pages.contact.letsWorkTogether") }</h2>

    <div class="grid md:grid-cols-2 gap-12">
      <div>
        <h3 class="text-xl font-semibold mb-6">
          { translate("pages.contact.projectInMind") }
        </h3>
        <p class="text-muted-foreground mb-8 leading-relaxed text-justify">
          { translate("pages.contact.projectText") }
        </p>

        <div class="space-y-4">
          <div class="flex items-center space-x-3">
            <MailIcon class="h-5 w-5 text-primary" />
            <span>jadiaz.inf@gmail.com</span>
          </div>
          <div class="flex items-center space-x-3">
            <PhoneIcon class="h-5 w-5 text-primary" />
            <span>+58 (414) 293 31 11</span>
          </div>
          <div class="flex items-center space-x-3">
            <MapPinIcon class="h-5 w-5 text-primary" />
            <span>Caracas, Venezuela</span>
          </div>
        </div>

        <div class="flex space-x-4 mt-8 gap-3 items-center">
          <GithubButton client:visible/>
          <LinkedinButton client:visible />
        </div>
      </div>

      <Card>
        <CardHeader>
          <CardTitle>
          { translate("pages.contact.sendMessage") }
          </CardTitle>
        </CardHeader>
        <CardContent>
          <form class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
              <Input placeholder={translate("pages.contact.name")} />
              <Input placeholder="Email" type="email" />
            </div>
            <Input placeholder={translate("pages.contact.subject")} />
            <Textarea placeholder={translate("pages.contact.yourMessage")} rows={5} />
            <Button class="w-full">{translate("pages.contact.sendMessage")}</Button>
          </form>
        </CardContent>
      </Card>
    </div>
  </div>
</section>
